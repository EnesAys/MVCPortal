@model MvcPortal.DAL.Model.Yazi
@{
    ViewBag.Title = "Yazı Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="card-header">  @ViewBag.Title @Html.ActionLink("Yazı Listele", "Index", "Yazi", new { @class = "fa fa link" }) </div>

    <div class="card-body">
        <form>
            <div class="form-group">
                <label for="exampleInputEmail1">Başlık</label>
                @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control", id = "Baslik", placeholder = "Haber Başlık" })
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Kısa Açıklama</label>
                @Html.TextAreaFor(x => x.KisaAciklama, new { @class = "form-control", id = "KisaAciklama", placeholder = "Kısa Açıklama" })
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Açıklama</label>
                @Html.TextAreaFor(x => x.Aciklama, new { @class = "form-control", id = "Aciklama", placeholder = "Açıklama" })
            </div>

            <div class="form-group">
                <label for="exampleInputEmail1">Vitrin Resmi</label>
             <input type="file" name="Resim"accept="image/*"class="form-control"/>
            </div>

            <div class="form-group">
                <div class="form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" type="checkbox" id="katAktif" checked />Aktif Mi?
                    </label>
                </div>
            </div>

            <a href="#" class="btn btn-primary btn-block" onclick="KategoriEkle()">Kaydet</a>

        </form>

    </div>
</div>
